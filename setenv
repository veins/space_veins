# Check if called from Veins directory
test -f print-space_Veins-version >/dev/null 2>&1
if [ "$?" -ne 0 ]; then
	echo 'Error: current working directory does not look like a space_Veins root directory. Aborting.' >&2
	return 1
fi

# Add space_Veins directory to PATH
SPACE_VEINS_ROOT="$(pwd)"
export PATH="$PATH":"$SPACE_VEINS_ROOT/bin"

# Set PROJ_LIB
export PROJ_LIB="${SPACE_VEINS_ROOT}/lib/proj/build/data"

